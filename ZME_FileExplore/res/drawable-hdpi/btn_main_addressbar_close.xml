<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
          <layer-list android:opacity="transparent">
            <item >
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
				    android:shape="rectangle">
				    <!-- background color -->
				    <solid android:color="#0080A8"/>
				    <!-- bounding line color -->
				    <stroke android:width="3dp" android:color="#484848"/>
				    <!-- corners radius -->
				    <corners android:radius="10dp"/>
				</shape>
            </item>
            <item >
                <bitmap android:src="@drawable/main_addressbar_close_click"
           				android:gravity="center"
           				android:filter="true"/>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list android:opacity="transparent">
            <item >
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
				    android:shape="rectangle">
				    <!-- background color -->
				    <solid android:color="#303030"/>
				    <!-- bounding line color -->
				    <stroke android:width="3dp" android:color="#484848"/>
				    <!-- corners radius -->
				    <corners android:radius="10dp"/>
				</shape>
            </item>
            <item >
                <bitmap android:src="@drawable/main_addressbar_close"
            			android:gravity="center"
            			android:filter="true"/>
            </item>
        </layer-list>
    </item>
</selector>