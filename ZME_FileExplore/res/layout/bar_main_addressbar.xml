<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false"
    style="@drawable/border_main_addressbar" >

    <!-- main_addressbar_access -->

    <LinearLayout
        style="@drawable/border_main_addressbar_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_main_addressbar_access"
            android:background="@drawable/btn_main_addressbar_access"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <!-- main_addressbar_address -->

	<LinearLayout 
	    style="@drawable/border_main_addressbar_item"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1">
	    <Button android:id="@+id/prev_address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	</LinearLayout>
	
    <!-- main_addressbar_close -->
	
</LinearLayout>